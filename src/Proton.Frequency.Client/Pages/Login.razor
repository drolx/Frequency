@page "/auth/login"
@layout Shared.AuthLayout

<PageTitle>Login</PageTitle>

<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid d-flex align-content-center justify-content-center">
    <a class="navbar-brand" href="#">Proton.Frequency</a>
  </div>
</nav>
<div class="container">
  <div class="d-flex align-items-center justify-content-center" style="height: calc(80vh - 64px)">
    <div class="card p-5 pb-3" style="min-width: 550px">
      <form>
        <div class="form-floating mb-3">
          <input type="email" class="form-control rounded-3" id="floatingInput" placeholder="Username">
          <label for="floatingInput">Username</label>
        </div>
        <div class="form-floating mb-3">
          <input type="password" class="form-control rounded-3" id="floatingPassword" placeholder="Password">
          <label for="floatingPassword">Password</label>
        </div>
        <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Sign In</button>
        <hr class="my-3">
        <div class="align-content-center text-center">
          <small class="text-muted">Documentation & license.</small>
        </div>
      </form>
    </div>
  </div>
  
  <footer class="fixed-bottom">
      <p class="text-center text-muted">&copy; @DateTime.Now.Year Proton.Frequency</p>
  </footer>
</div>
