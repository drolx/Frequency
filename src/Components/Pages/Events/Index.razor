@page "/events"
@attribute [RenderModeWebAssembly]

<Title>Events</Title>

@code {
    DatePicker<DateTime?>? _datePicker;
}

<div class="card mt-1 px-1 pt-3">
    <div class="row px-2">
        <div class="col-4">
            <Addons>
                <Addon AddonType="AddonType.Body">
                    <DatePicker Placeholder="Select Range" @ref="@_datePicker" TValue="DateTime?" InputMode="DateInputMode.Date" SelectionMode="DateInputSelectionMode.Range" TimeAs24hr/>
                </Addon>
                <Addon AddonType="AddonType.End">
                    <Button Color="Color.Secondary" Clicked="@(() => _datePicker!.ToggleAsync())">
                        <Icon Name="IconName.CalendarDay"/>
                    </Button>
                </Addon>
            </Addons>
        </div>
        <div class="col d-inline-flex flex-nowrap justify-content-end">
            <button type="button" class="btn btn-danger ms-2" href="#">
                <i class="fa-solid fa-trash"></i>
            </button>
        </div>
    </div>
    <div class="table-wrapper-scroll-y table-scroll mt-2 px-3">
        <table class="table table-sm table-hover table-responsive text-nowrap text-center align-middle">
            <thead>
            <tr class="text-black-50">
                <th scope="col">NAME</th>
                <th scope="col">TYPE</th>
                <th scope="col">LOCATION</th>
                <th scope="col">TIME</th>
                <th scope="col">NODE</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>x</td>
                <td>
                    @* <span class="badge bg-success badge-dot"></span> *@
                    <Badge Class="px-3 py-2" Color="Color.Success" Style="width: 110px">ENTERED</Badge>
                </td>
                <td>x</td>
                <td>x</td>
                <td>x</td>
                <td>
                    <a type="button" class="btn btn-primary" href="#">
                        <i class="fas fa-ellipsis"></i>
                    </a>
                </td>
            </tr>
            <tr>
                <td>x</td>
                <td>
                    <Badge Class="px-3 py-2" Color="Color.Danger" Style="width: 110px">LEFT</Badge>
                </td>
                <td>x</td>
                <td>x</td>
                <td>x</td>
                <td>
                    <a type="button" class="btn btn-primary" href="#">
                        <i class="fas fa-ellipsis"></i>
                    </a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <TableNavigation></TableNavigation>
</div>