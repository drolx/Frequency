@{
    Layout = "_Root";
    var links = new Dictionary<string, string>
    {
        { "Status", "/" },
        { "Event History", "/event" },
        { "Scan Queue", "/queue" },
        { "Terminals", "/terminal" },
        { "Objects", "/object" },
        { "Settings", "/setting" }
    };
}

<div class="sticky-top container" style="height: 125px">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
            <span class="fs-4">Proton.Frequency</span>
        </a>
        <ul class="nav nav-pills">
            <li class="nav-item"><a href="/login" class="nav-link">Log Out</a></li>
        </ul>
    </header>
    <div class="d-flex flex-wrap justify-content-center">
        <ul class="nav nav-pills nav-fill">
        @foreach (var (key, value) in links)
        {
            <li class="nav-item"><a href="@value" class="nav-link main-nav" aria-current="page">@key</a></li>
        }
        </ul>
    </div>
</div>
<div class="container-fluid p-2">
    @RenderBody()
</div>

<footer class="fixed-bottom">
    <p class="text-center text-muted">&copy; @DateTime.Now.Year Proton.Frequency</p>
</footer>

@section Scripts {
    <script>
        /** Active navigation selection **/
        handleActiveNav('.main-nav');
        handleActiveNav('.setting-nav');
    </script>
}