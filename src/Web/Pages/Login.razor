@page "/auth/login"
@layout Shared.AuthLayout

<Title>Login</Title>

<div class="card p-5 pb-3" style="min-width: 550px">
      <form>
        <div class="form-floating mb-3">
          <input type="email" class="form-control rounded-3" id="floatingInput" placeholder="Username">
          <label for="floatingInput">Username</label>
        </div>
        <div class="form-floating mb-3">
          <input type="password" class="form-control rounded-3" id="floatingPassword" placeholder="Password">
          <label for="floatingPassword">Password</label>
        </div>
        <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Sign In</button>
        <hr class="my-3">
        <div class="align-content-center text-center">
          <NavLink href="documentation">
            <small class="text-muted">Documentation.</small>
          </NavLink>
        </div>
      </form>
    </div>
  
  